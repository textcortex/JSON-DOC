// https://developers.notion.com/reference/file-object
// File objects can have type: external, or file (for files uploaded to Notion).
// Since uploading to Notion doesn't make sense in the context of JSON-DOC,
// we'll only define the external type.
{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "File object",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["external", "file"]
    }
  },
  "required": ["type"],
  "allOf": [
    {
      "if": {
        "properties": {
          "type": {
            "const": "external"
          }
        }
      },
      "then": {
        "properties": {
          "type": {
            "const": "external"
          },
          "external": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string"
              }
            },
            "required": ["url"],
            "unevaluatedProperties": false
          }
        },
        "required": ["external"],
        "unevaluatedProperties": false
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "file"
          }
        }
      },
      "then": {
        "properties": {
          "type": {
            "const": "file"
          },
          "file": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string"
              },
              "expiry_time": {
                "type": "string",
                "format": "date-time"
              }
            },
            "required": ["url"],
            "unevaluatedProperties": false
          }
        },
        "required": ["file"],
        "unevaluatedProperties": false
      }
    }
  ],
  "unevaluatedProperties": false
}
