{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Equation block",
  "type": "object",
  "allOf": [{ "$ref": "/block/common/common_schema.json" }],
  "properties": {
    "type": {
      "const": "equation"
    },
    "equation": {
      "type": "object",
      "properties": {
        "expression": {
          "type": "string"
        }
      },
      "required": ["expression"],
      "additionalProperties": false
    }
  },
  "required": ["type", "equation"],
  "unevaluatedProperties": false
}
