{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Image block",
  "type": "object",
  "allOf": [
    {
      "$ref": "/block/common/common_schema.json"
    }
  ],
  "properties": {
    "type": {
      "const": "image"
    },
    "image": {
      "type": "object",
      "allOf": [
        {
          "$ref": "/file_base/file_base_schema.json"
        }
      ],
      "properties": {
        "caption": {
          "type": "array",
          "items": {
            "$ref": "/block/types/rich_text/rich_text_schema.json"
          }
        }
      },
      "unevaluatedProperties": false
    }
  },
  "required": ["type", "image"],
  "unevaluatedProperties": false
}
