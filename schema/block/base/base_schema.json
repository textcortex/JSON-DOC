// Contains keys that are common in all blocks
{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BlockBase",
  "type": "object",
  "properties": {
    "object": {
      "type": "string",
      "const": "block"
    },
    "id": {
      "type": "string"
    },
    "parent": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "block_id": {
          "type": "string"
        },
        "page_id": {
          "type": "string"
        }
        // TODO: Make block_id and page_id mutually exclusive
      },
      "required": ["type"],
      "additionalProperties": false
    },
    "type": {
      "type": "string"
      // Type will be derived programmatically by the available blocks in the
      // JSON-DOC/schema/blocks directory
      // The ones below are the ones that are available in the Notion API
      //  "enum": [
      //  "bookmark",
      //  "breadcrumb",
      //  "bulleted_list_item",
      //  "callout",
      //  "child_database",
      //  "child_page",
      //  "column",
      //  "column_list",
      //  "divider",
      //  "embed",
      //  "equation",
      //  "file",
      //  "heading_1",
      //  "heading_2",
      //  "heading_3",
      //  "image",
      //  "link_preview",
      //  "link_to_page",
      //  "numbered_list_item",
      //  "paragraph",
      //  "pdf",
      //  "quote",
      //  "synced_block",
      //  "table",
      //  "table_of_contents",
      //  "table_row",
      //  "template",
      //  "to_do",
      //  "toggle",
      //  "unsupported",
      //  "video"
      //]
    },
    "created_time": {
      "type": "string",
      "format": "date-time"
    },
    "created_by": {
      "type": "object",
      "properties": {
        "object": {
          "type": "string",
          "const": "user"
        },
        "id": {
          "type": "string"
        }
      },
      "required": ["object", "id"],
      "additionalProperties": false
    },
    "last_edited_time": {
      "type": "string",
      "format": "date-time"
    },
    "last_edited_by": {
      "type": "object",
      "properties": {
        "object": {
          "type": "string",
          "const": "user"
        },
        "id": {
          "type": "string"
        }
      },
      "required": ["object", "id"],
      "additionalProperties": false
    },
    "archived": {
      "type": "boolean"
    },
    "in_trash": {
      "type": "boolean"
    },
    "has_children": {
      "type": "boolean"
    },
    // notion-diverge
    "metadata": {
      "type": "object",
      "properties": {}
    }
  },
  "required": [
    "object",
    "id",
    "type",
    "created_time",
    // "created_by", // These are optional since we can be out of Notion context
    // "last_edited_time",
    // "last_edited_by",
    "archived",
    "has_children"
  ]
  // This was meant to refer to the object that contains type-specific block
  //   "additionalProperties": {
  //     "type": "object",
  //     "description": "An object containing type-specific block information"
  //   }
  // "additionalProperties": false
  //   "unevaluatedProperties": false
}
